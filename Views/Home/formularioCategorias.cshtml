 
@{
    ViewBag.Title = "Configuracion de Categorias";
}

@if (ViewBag.Categoria != null)
{
    <h2>Editar Categoría</h2>

}
else
{
    <h2>Agregar Categoría</h2>
}
<head>
    <style>
        input[type="text"], select {
            color: #fff;
        }
    </style>

</head>
<script>
    var UrlGuardarCategoria = '@Url.Action("guardarCategoria", "Home")';
</script>
<script src="~/Scripts/js_Categoria.js"></script>
<div class="row">
    <div class="col s2">
        <label>Nombre de la Categoría</label>
        @if (ViewBag.Categoria != null)
        {
            <input type="text" id="nombre" name="nombre" class="form-control" value=" @ViewBag.Categoria.nombre" />
        }
        else
        {
            <input type="text" id="nombre" name="nombre" class="form-control" />
        }
    </div>

    <div class="col s10">
        <label>Descripción</label>
        @if (ViewBag.Categoria != null)
        {
            <input type="text" id="descripcion" name="descripcion" class="form-control" value="@ViewBag.Categoria.descripcion" />
        }
        else
        {
            <input type="text" id="descripcion" name="descripcion" class="form-control" />
        }
    </div>
</div>
<br />
@if (ViewBag.Categoria != null)
{
    <div class="row">
        <div class="col-md-2">
            <a href="javascript:guardarCategoria()" class="btn btn-success amber accent-3">Guardar Cambios</a>
        </div>
    </div>
}
else
{
    <div class="row">
        <div class="col-md-2">
            <a href="javascript:guardarCategoria()" class="btn btn-success amber accent-3">Guardar nuevo elemento</a>
        </div>
    </div>
}


