
@{
    ViewBag.Title = "Checadas";
}
<head>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <style>
        .delete-column {
            padding-right: 20px;
        }

        .add-book-button {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 50px;
            height: 50px;
            border-radius: 50%;
            background-color: #FFc400;
            margin-left: auto;
        }

        i.blackross {
            color: black;
        }

        .add-book-button i {
            font-size: 24px;
        }
    </style>
</head>
<h2>Gestión de Checadas de los Empleados    </h2>
<a href="~/Home/formularioChecadas" type="button" class="waves-effect waves-light btn amber accent-3"><i class="material-icons right">add_circle_outline</i>Checar Empleado</a>

<table class="responsive-table">
    <tr>
        <th>Empleado</th>
        <th>Fecha</th>
        <th>Hora de Entrada</th>
        <th>Hora de Salida</th>
        <th>Corregir</th>
        <th>Pagar</th>
    </tr>
    @foreach (var item in Model)
    {
        if (item.Pagado == false)
        {
            <tr>
                <td>@item.Personal.nombre @item.Personal.apellido</td>
                <td>@item.fecha.ToString("dd/MM/yyyy")</td>
                <td>@item.hora_entrada</td>
                <td>@item.hora_salida</td>
                <td style="text-align:center;">
                    <a class="waves-effect waves-light btn amber accent-3" href="~/Home/formularioChecadas?IDChecada=@item.id_checada" style="font-size:24px; display:block; margin-right:15px;"><i class="material-icons">border_color</i></a>
                </td>
                <td style="text-align:center;" class="delete-column">
                    <a class="waves-effect waves-light btn" href="~/Home/pagarChecada?IDChecada=@item.id_checada" style="font-size: 24px; display: block; margin-right: 40px; color: white; background-color: rgb(151, 227, 48);"><i class="material-icons">monetization_on</i></a>
                </td>
            </tr>
        }
    }
</table>
